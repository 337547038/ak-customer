<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="customer.dao.DepartmentDao">

        <resultMap type="customer.entity.Department" id="DepartmentMap">
                <result property="id" column="id" jdbcType="INTEGER"/>
                <result property="tid" column="tid" jdbcType="INTEGER"/>
                <result property="name" column="name" jdbcType="VARCHAR"/>
                <result property="status" column="status" jdbcType="INTEGER"/>
                <result property="remark" column="remark" jdbcType="VARCHAR"/>
                <result property="userId" column="userId" jdbcType="INTEGER"/>
        </resultMap>

    <sql id="commColumnsItem">
id, tid, name, status, remark, userId
    </sql>
        <!--查询单个-->
        <select id="queryById" resultMap="DepartmentMap">
            select
            <include refid="commColumnsItem" />
            from sys_department
                where id = #{id}
        </select>

        <!--查询指定行数据-->
        <select id="queryAllByLimit">
            select
            <choose>
                <when test="extend.columns != null and extend.columns!=''">
                    ${extend.columns}
                </when>
                <otherwise>
                    <include refid="commColumnsItem" />
                </otherwise>
            </choose>
            ,(select userName from `sys_user` where d.userId=id) as userName
            , exists(select 1 from sys_department child where child.tid=d.id) as hasChildren
            from sys_department as d
            <where>
                    <if test="query.id != null">
                        and id = #{query.id}
                    </if>
                    <if test="query.tid != null">
                        and tid = #{query.tid}
                    </if>
                    <if test="query.name != null and query.name != ''">
                        and name LIKE CONCAT('%', #{query.name}, '%')
                    </if>
                    <if test="query.status != null">
                        and status = #{query.status}
                    </if>
                    <if test="query.remark != null and query.remark != ''">
                        and remark = #{query.remark}
                    </if>
                    <if test="query.userId != null">
                        and userId = #{query.userId}
                    </if>
            </where>
            <choose>
                <when test="extend.sort != null and extend.sort!=''">
                    order by ${extend.sort}
                </when>
                <otherwise>
                    order by id desc
                </otherwise>
            </choose>
            <if test="extend.pageSize >0">
            limit #{extend.pageIndex}, #{extend.pageSize}
            </if>
        </select>

        <!--统计总行数-->
        <select id="count" resultType="java.lang.Long">
            select count(1)
            from sys_department
            <where>
                    <if test="id != null">
                        and id = #{id}
                    </if>
                    <if test="tid != null">
                        and tid = #{tid}
                    </if>
                    <if test="name != null and name != ''">
                        and name LIKE CONCAT('%', #{name}, '%')
                    </if>
                    <if test="status != null">
                        and status = #{status}
                    </if>
                    <if test="remark != null and remark != ''">
                        and remark = #{remark}
                    </if>
                    <if test="userId != null">
                        and userId = #{userId}
                    </if>
            </where>
        </select>

        <!--新增所有列-->
        <insert id="insert" keyProperty="id" useGeneratedKeys="true">
            insert into sys_department(tid, name, status, remark, userId)
                values
            (#{tid}, #{name}, #{status}, #{remark}, #{userId})
        </insert>

        <!--通过主键修改数据-->
        <update id="updateById">
            update sys_department
            <set>
                    <if test="tid != null">
                        tid = #{tid},
                    </if>
                    <if test="name != null and name != ''">
                        name = #{name},
                    </if>
                    <if test="status != null">
                        status = #{status},
                    </if>
                    <if test="remark != null and remark != ''">
                        remark = #{remark},
                    </if>
                        userId = #{userId},
            </set>
            where id = #{id}
        </update>

        <!--通过主键删除-->
        <delete id="deleteById">
            delete
            from sys_department where id in
            <foreach collection="id" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
        </delete>
<!--根据部门id查询完整的部门层级关系-->
    <select id="queryDeptFullPath">
        WITH RECURSIVE subordinates AS (SELECT id, name, status,tid
                                        FROM sys_department
                                        where id = #{id}
                                        UNION ALL
                                        SELECT u.id, u.name, u.status,u.tid
                                        FROM sys_department u
                                        JOIN subordinates s ON u.id = s.tid)
        select id,name,status
        from subordinates
    </select>

    </mapper>
