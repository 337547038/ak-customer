<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="customer.dao.ContactDao">

        <resultMap type="customer.entity.Contact" id="ContactMap">
                <result property="id" column="id" jdbcType="INTEGER"/>
                <result property="name" column="name" jdbcType="VARCHAR"/>
                <result property="sex" column="sex" jdbcType="INTEGER"/>
                <result property="tel" column="tel" jdbcType="VARCHAR"/>
                <result property="phone" column="phone" jdbcType="VARCHAR"/>
                <result property="weixin" column="weixin" jdbcType="VARCHAR"/>
                <result property="qq" column="qq" jdbcType="VARCHAR"/>
                <result property="email" column="email" jdbcType="VARCHAR"/>
                <result property="position" column="position" jdbcType="VARCHAR"/>
                <result property="tid" column="tid" jdbcType="INTEGER"/>
                <result property="creatDate" column="creatDate" jdbcType="TIMESTAMP"/>
                <result property="lastTime" column="lastTime" jdbcType="TIMESTAMP"/>
                <result property="nextTime" column="nextTime" jdbcType="TIMESTAMP"/>
                <result property="decisionMaker" column="decisionMaker" jdbcType="INTEGER"/>
                <result property="address" column="address" jdbcType="VARCHAR"/>
                <result property="birthday" column="birthday" jdbcType="TIMESTAMP"/>
                <result property="remark" column="remark" jdbcType="VARCHAR"/>
        </resultMap>

    <sql id="commColumnsItem">
id, name, sex, tel, phone, weixin, qq, email, position, tid, creatDate, lastTime, nextTime, decisionMaker, address, birthday, remark
    </sql>
        <!--查询单个-->
        <select id="queryById" resultMap="ContactMap">
            select
            <include refid="commColumnsItem" />
            from sys_contact
                where id = #{id}
        </select>

        <!--查询指定行数据-->
        <select id="queryAllByLimit">
            select
            a.id,a.name, a.sex, a.tel, a.phone, a.weixin, a.qq, a.email, a.position, a.tid, a.creatDate,a.lastTime, a.nextTime, a.decisionMaker, a.address, a.birthday, b.company
            from sys_contact as a join sys_customer as b on a.tid = b.id
            <where>
                <if test="query.id != null">
                    and a.id = #{query.id}
                </if>
                <if test="extend.userId != null">
                    and b.userId=#{extend.userId}
                </if>
                <if test="extend.search == 'child'">
                    and b.userId in
                    <foreach collection="extend.userIds" item="item" separator="," open="(" close=")">
                        #{item}
                    </foreach>
                </if>
                <if test="query.name != null and query.name != ''">
                    and a.name LIKE CONCAT('%', #{query.name}, '%')
                </if>
                <if test="query.sex != null">
                    and a.sex = #{query.sex}
                </if>
                <if test="query.tel != null and query.tel != ''">
                    and a.tel = #{query.tel}
                </if>
                <if test="query.phone != null and query.phone != ''">
                    and a.phone = #{query.phone}
                </if>
                <if test="query.weixin != null and query.weixin != ''">
                    and a.weixin = #{query.weixin}
                </if>
                <if test="query.qq != null and query.qq != ''">
                    and a.qq = #{query.qq}
                </if>
                <if test="query.email != null and query.email != ''">
                    and a.email = #{query.email}
                </if>
                <if test="query.position != null and query.position != ''">
                    and a.position = #{query.position}
                </if>
                <if test="query.tid != null">
                    and a.tid = #{query.tid}
                </if>
                <if test="query.creatDate != null">
                    and a.creatDate = #{query.creatDate}
                </if>
                <if test="query.nextTime != null">
                    /*只要时间不为空，查询未来七天内的所有数据*/
                    and DATE_ADD(NOW(), INTERVAL 7 DAY)>=a.nextTime
                </if>
                <if test="query.decisionMaker != null">
                    and a.decisionMaker = #{query.decisionMaker}
                </if>
                <if test="query.address != null and query.address != ''">
                    and a.address = #{query.address}
                </if>
                <if test="query.birthday != null">
                    and a.birthday = #{query.birthday}
                </if>
            </where>
            <choose>
                <when test="extend.sort != null and extend.sort!=''">
                    order by ${extend.sort}
                </when>
                <otherwise>
                    order by id desc
                </otherwise>
            </choose>
            <if test="extend.pageSize >0">
                limit #{extend.pageIndex}, #{extend.pageSize}
            </if>
        </select>

        <!--统计总行数-->
        <select id="count" resultType="java.lang.Long">
            select count(1)
            from sys_contact as a
            join sys_customer as b on a.tid = b.id
            <where>
                <if test="query.id != null">
                    and a.id = #{query.id}
                </if>
                <if test="extend.userId != null">
                    and b.userId=#{extend.userId}
                </if>
                <if test="extend.search == 'child'">
                    and b.userId in
                    <foreach collection="extend.userIds" item="item" separator="," open="(" close=")">
                        #{item}
                    </foreach>
                </if>
                <if test="query.name != null and query.name != ''">
                    and a.name LIKE CONCAT('%', #{query.name}, '%')
                </if>
                <if test="query.sex != null">
                    and a.sex = #{query.sex}
                </if>
                <if test="query.tel != null and query.tel != ''">
                    and a.tel = #{query.tel}
                </if>
                <if test="query.phone != null and query.phone != ''">
                    and a.phone = #{query.phone}
                </if>
                <if test="query.weixin != null and query.weixin != ''">
                    and a.weixin = #{query.weixin}
                </if>
                <if test="query.qq != null and query.qq != ''">
                    and a.qq = #{query.qq}
                </if>
                <if test="query.email != null and query.email != ''">
                    and a.email = #{query.email}
                </if>
                <if test="query.position != null and query.position != ''">
                    and a.position = #{query.position}
                </if>
                <if test="query.tid != null">
                    and a.tid = #{query.tid}
                </if>
                <if test="query.creatDate != null">
                    and a.creatDate = #{query.creatDate}
                </if>
                <if test="query.nextTime != null">
                    /*只要时间不为空，查询未来七天内的所有数据*/
                    and DATE_ADD(NOW(), INTERVAL 7 DAY)>=a.nextTime
                </if>
                <if test="query.decisionMaker != null">
                    and a.decisionMaker = #{query.decisionMaker}
                </if>
                <if test="query.address != null and query.address != ''">
                    and a.address = #{query.address}
                </if>
                <if test="query.birthday != null">
                    and a.birthday = #{query.birthday}
                </if>
            </where>
        </select>

        <!--新增所有列-->
        <insert id="insert" keyProperty="id" useGeneratedKeys="true">
            insert into sys_contact(name, sex, tel, phone, weixin, qq, email, position, tid, creatDate, nextTime, decisionMaker, address, birthday, remark)
                values
            (#{name}, #{sex}, #{tel}, #{phone}, #{weixin}, #{qq}, #{email}, #{position}, #{tid}, #{creatDate}, #{nextTime}, #{decisionMaker}, #{address}, #{birthday}, #{remark})
        </insert>

        <!--通过主键修改数据-->
        <update id="updateById">
            update sys_contact
            <set>
                    <if test="name != null and name != ''">
                        name = #{name},
                    </if>
                    <if test="sex != null">
                        sex = #{sex},
                    </if>
                    <if test="tel != null and tel != ''">
                        tel = #{tel},
                    </if>
                    <if test="phone != null and phone != ''">
                        phone = #{phone},
                    </if>
                    <if test="weixin != null and weixin != ''">
                        weixin = #{weixin},
                    </if>
                    <if test="qq != null and qq != ''">
                        qq = #{qq},
                    </if>
                    <if test="email != null and email != ''">
                        email = #{email},
                    </if>
                    <if test="position != null and position != ''">
                        position = #{position},
                    </if>
                    <if test="tid != null">
                        tid = #{tid},
                    </if>
                    <!--<if test="creatDate != null">
                        creatDate = #{creatDate},
                    </if>-->
                    <if test="lastTime != null">
                        lastTime = #{lastTime},
                    </if>
                    <!--<if test="nextTime != null">
                        nextTime = #{nextTime},
                    </if>-->
                    <if test="decisionMaker != null">
                        decisionMaker = #{decisionMaker},
                    </if>
                    <if test="address != null and address != ''">
                        address = #{address},
                    </if>
                    <if test="birthday != null">
                        birthday = #{birthday},
                    </if>
                    <if test="remark != null and remark != ''">
                        remark = #{remark},
                    </if>
                nextTime = #{nextTime}
            </set>
            where id = #{id}
        </update>

        <!--通过主键删除-->
        <delete id="deleteById">
            delete a
            from sys_contact as a
            join sys_customer as b on b.id=a.tid
            where (b.userId=#{extend.userId} or b.userId in
            <foreach collection="extend.userIds" item="item" separator="," open="(" close=")">
                #{item}
            </foreach>
            ) and a.id in
            <foreach collection="id" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
        </delete>

    <delete id="deleteByCustomerId">
        delete
        from sys_contact where tid in
        <foreach collection="id" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </delete>

    </mapper>
