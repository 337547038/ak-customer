<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="customer.dao.CustomerDao">

        <resultMap type="customer.entity.Customer" id="CustomerMap">
                <result property="id" column="id" jdbcType="INTEGER"/>
                <result property="company" column="company" jdbcType="VARCHAR"/>
                <result property="brandName" column="brandName" jdbcType="VARCHAR"/>
                <result property="type" column="type" jdbcType="INTEGER"/>
                <result property="area" column="area" jdbcType="VARCHAR"/>
                <result property="address" column="address" jdbcType="VARCHAR"/>
                <result property="industry" column="industry" jdbcType="INTEGER"/>
                <result property="code" column="code" jdbcType="VARCHAR"/>
                <result property="files" column="files" jdbcType="VARCHAR"/>
                <result property="source" column="source" jdbcType="INTEGER"/>
                <result property="tel" column="tel" jdbcType="VARCHAR"/>
                <result property="web" column="web" jdbcType="VARCHAR"/>
                <result property="userId" column="userId" jdbcType="INTEGER"/>
                <result property="creatTime" column="creatTime" jdbcType="TIMESTAMP"/>
                <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
        </resultMap>

    <sql id="commColumnsItem">
id, company, brandName, type, area, address, industry, code, files, source, tel, web, userId, creatTime, updateTime
    </sql>
        <!--查询单个-->
        <select id="queryById" resultMap="CustomerMap">
            select
            <include refid="commColumnsItem" />
            from sys_customer
                where id = #{id}
        </select>

        <!--查询指定行数据-->
        <select id="queryAllByLimit">
            select
            (select userName from `sys_user` where c.userId=id) as userName,
            <choose>
                <when test="extend.columns != null and extend.columns!=''">
                    ${extend.columns}
                </when>
                <otherwise>
                    <include refid="commColumnsItem" />
                </otherwise>
            </choose>
            from sys_customer as c
            <where>
                    <if test="query.id != null">
                        and id = #{query.id}
                    </if>
                    <if test="query.company != null and query.company != ''">
                        and company LIKE CONCAT('%', #{query.company}, '%')
                    </if>
                    <if test="query.brandName != null and query.brandName != ''">
                        and brandName LIKE CONCAT('%', #{query.brandName}, '%')
                    </if>
                    <if test="query.type != null">
                        and type = #{query.type}
                    </if>
                    <if test="query.area != null and query.area != ''">
                        and area = #{query.area}
                    </if>
                    <if test="query.address != null and query.address != ''">
                        and address = #{query.address}
                    </if>
                    <if test="query.industry != null">
                        and industry = #{query.industry}
                    </if>
                    <if test="query.code != null and query.code != ''">
                        and code LIKE CONCAT('%', #{query.code}, '%')
                    </if>
                    <if test="query.files != null and query.files != ''">
                        and files = #{query.files}
                    </if>
                    <if test="query.source != null">
                        and source = #{query.source}
                    </if>
                    <if test="query.tel != null and query.tel != ''">
                        and tel LIKE CONCAT('%', #{query.tel}, '%')
                    </if>
                    <if test="query.web != null and query.web != ''">
                        and web = #{query.web}
                    </if>
                    <if test="query.userId != null">
                        and userId = #{query.userId}
                    </if>
                    <if test="query.creatTime != null">
                        and creatTime = #{query.creatTime}
                    </if>
                    <if test="query.updateTime != null">
                        and updateTime = #{query.updateTime}
                    </if>
            </where>
            <choose>
                <when test="extend.sort != null and extend.sort!=''">
                    order by ${extend.sort}
                </when>
                <otherwise>
                    order by id desc
                </otherwise>
            </choose>
            <if test="extend.pageSize >0">
            limit #{extend.pageIndex}, #{extend.pageSize}
            </if>
        </select>

        <!--统计总行数-->
        <select id="count" resultType="java.lang.Long">
            select count(1)
            from sys_customer
            <where>
                    <if test="id != null">
                        and id = #{id}
                    </if>
                    <if test="company != null and company != ''">
                        and company LIKE CONCAT('%', #{company}, '%')
                    </if>
                    <if test="brandName != null and brandName != ''">
                        and brandName LIKE CONCAT('%', #{brandName}, '%')
                    </if>
                    <if test="type != null">
                        and type = #{type}
                    </if>
                    <if test="area != null and area != ''">
                        and area = #{area}
                    </if>
                    <if test="address != null and address != ''">
                        and address = #{address}
                    </if>
                    <if test="industry != null">
                        and industry = #{industry}
                    </if>
                    <if test="code != null and code != ''">
                        and code LIKE CONCAT('%', #{code}, '%')
                    </if>
                    <if test="files != null and files != ''">
                        and files = #{files}
                    </if>
                    <if test="source != null">
                        and source = #{source}
                    </if>
                    <if test="tel != null and tel != ''">
                        and tel LIKE CONCAT('%', #{tel}, '%')
                    </if>
                    <if test="web != null and web != ''">
                        and web = #{web}
                    </if>
                    <if test="userId != null">
                        and userId = #{userId}
                    </if>
                    <if test="creatTime != null">
                        and creatTime = #{creatTime}
                    </if>
                    <if test="updateTime != null">
                        and updateTime = #{updateTime}
                    </if>
            </where>
        </select>

        <!--新增所有列-->
        <insert id="insert" keyProperty="id" useGeneratedKeys="true">
            insert into sys_customer(company, brandName, type, area, address, industry, code, files, source, tel, web, userId, creatTime, updateTime)
                values
            (#{company}, #{brandName}, #{type}, #{area}, #{address}, #{industry}, #{code}, #{files}, #{source}, #{tel}, #{web}, #{userId}, #{creatTime}, #{updateTime})
        </insert>

        <!--通过主键修改数据-->
        <update id="updateById">
            update sys_customer
            <set>
                    <if test="company != null and company != ''">
                        company = #{company},
                    </if>
                    <if test="brandName != null and brandName != ''">
                        brandName = #{brandName},
                    </if>
                    <if test="type != null">
                        type = #{type},
                    </if>
                    <if test="area != null and area != ''">
                        area = #{area},
                    </if>
                    <if test="address != null and address != ''">
                        address = #{address},
                    </if>
                    <if test="industry != null">
                        industry = #{industry},
                    </if>
                    <if test="code != null and code != ''">
                        code = #{code},
                    </if>
                    <if test="files != null and files != ''">
                        files = #{files},
                    </if>
                    <if test="source != null">
                        source = #{source},
                    </if>
                    <if test="tel != null and tel != ''">
                        tel = #{tel},
                    </if>
                    <if test="web != null and web != ''">
                        web = #{web},
                    </if>
                    <if test="userId != null">
                        userId = #{userId},
                    </if>
                    <if test="creatTime != null">
                        creatTime = #{creatTime},
                    </if>
                    <if test="updateTime != null">
                        updateTime = #{updateTime},
                    </if>
            </set>
            where id = #{id}
        </update>

        <!--通过主键删除-->
        <delete id="deleteById">
            delete
            from sys_customer where id in
            <foreach collection="id" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
        </delete>

    </mapper>
