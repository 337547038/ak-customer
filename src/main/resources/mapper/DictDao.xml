<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="customer.dao.DictDao">

        <resultMap type="customer.entity.Dict" id="DictMap">
                <result property="id" column="id" jdbcType="INTEGER"/>
                <result property="name" column="name" jdbcType="VARCHAR"/>
                <result property="type" column="type" jdbcType="VARCHAR"/>
                <result property="status" column="status" jdbcType="INTEGER"/>
                <result property="remark" column="remark" jdbcType="VARCHAR"/>
                <result property="isSys" column="isSys" jdbcType="INTEGER"/>
                <result property="dateTime" column="dateTime" jdbcType="TIMESTAMP"/>
                <result property="children" column="children" jdbcType="VARCHAR"/>
        </resultMap>

    <sql id="commColumnsItem">
id, name, type, status, remark, isSys, dateTime, children
    </sql>
        <!--查询单个-->
        <select id="queryById" resultMap="DictMap">
            select
            <include refid="commColumnsItem" />
            from sys_dict
                where id = #{id}
        </select>

        <!--查询指定行数据-->
        <select id="queryAllByLimit">
            select
            <choose>
                <when test="extend.columns != null and extend.columns!=''">
                    ${extend.columns}
                </when>
                <otherwise>
                    <include refid="commColumnsItem" />
                </otherwise>
            </choose>
            from sys_dict
            <where>
                    <if test="query.id != null">
                        and id = #{query.id}
                    </if>
                    <if test="query.name != null and query.name != ''">
                        and name LIKE CONCAT('%', #{query.name}, '%')
                    </if>
                    <if test="query.type != null and query.type != ''">
                        and type = #{query.type}
                    </if>
                    <if test="query.status != null">
                        and status = #{query.status}
                    </if>
                    <if test="query.remark != null and query.remark != ''">
                        and remark = #{query.remark}
                    </if>
                    <if test="query.isSys != null">
                        and isSys = #{query.isSys}
                    </if>
                    <if test="query.dateTime != null">
                        and dateTime = #{query.dateTime}
                    </if>
                    <if test="query.children != null and query.children != ''">
                        and children = #{query.children}
                    </if>
            </where>
            <choose>
                <when test="extend.sort != null and extend.sort!=''">
                    order by ${extend.sort}
                </when>
                <otherwise>
                    order by id desc
                </otherwise>
            </choose>
            <if test="extend.pageSize >0">
            limit #{extend.pageIndex}, #{extend.pageSize}
            </if>
        </select>

        <!--统计总行数-->
        <select id="count" resultType="java.lang.Long">
            select count(1)
            from sys_dict
            <where>
                    <if test="id != null">
                        and id = #{id}
                    </if>
                    <if test="name != null and name != ''">
                        and name LIKE CONCAT('%', #{name}, '%')
                    </if>
                    <if test="type != null and type != ''">
                        and type = #{type}
                    </if>
                    <if test="status != null">
                        and status = #{status}
                    </if>
                    <if test="remark != null and remark != ''">
                        and remark = #{remark}
                    </if>
                    <if test="isSys != null">
                        and isSys = #{isSys}
                    </if>
                    <if test="dateTime != null">
                        and dateTime = #{dateTime}
                    </if>
                    <if test="children != null and children != ''">
                        and children = #{children}
                    </if>
            </where>
        </select>

        <!--新增所有列-->
        <insert id="insert" keyProperty="id" useGeneratedKeys="true">
            insert into sys_dict(name, type, status, remark, isSys, dateTime, children)
                values
            (#{name}, #{type}, #{status}, #{remark}, #{isSys}, #{dateTime}, #{children})
        </insert>

        <!--通过主键修改数据-->
        <update id="updateById">
            update sys_dict
            <set>
                    <if test="name != null and name != ''">
                        name = #{name},
                    </if>
                    <if test="type != null and type != ''">
                        type = #{type},
                    </if>
                    <if test="status != null">
                        status = #{status},
                    </if>
                    <if test="remark != null and remark != ''">
                        remark = #{remark},
                    </if>
                    <if test="isSys != null">
                        isSys = #{isSys},
                    </if>
                    <if test="dateTime != null">
                        dateTime = #{dateTime},
                    </if>
                    <if test="children != null and children != ''">
                        children = #{children},
                    </if>
            </set>
            where id = #{id}
        </update>

        <!--通过主键删除-->
        <delete id="deleteById">
            delete
            from sys_dict where isSys=0 and id in
            <foreach collection="id" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
        </delete>

    </mapper>
